# Unison preferences file
root = /var/www
root = ssh://root@REMOTE_SERVER_IP//var/www

# Unison Settings
perms = 0
batch = true
auto = true

# Keep Backups
backuplocation = central
backupdir = /root/.unison/backups
backup = Name *
backupprefix = .$VERSION

# Log Files
log = true
logfile = /var/log/unison.log
